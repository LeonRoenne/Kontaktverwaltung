<Window x:Class="Kontaktverwaltung.DeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontaktverwaltung"
        mc:Ignorable="d"
        Title="Löschen eines Kontaktes" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" x:Name="DeleteDialogUi" >
    <StackPanel Orientation="Vertical">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Orientation="Horizontal" >
            <TextBlock FontSize="14" Text="Wollen sie den Kontakt &quot;" />
            <TextBlock FontSize="14" x:Name="tbdelKontakt" />
            <TextBlock FontSize="14" Text="&quot; löschen?" />
        </StackPanel>
        <UniformGrid Margin="10" HorizontalAlignment="Center"  >
            <Button Click="DeleteOKButton_Click" IsDefault="True" MinWidth="100" FontSize="14">_Ja</Button>
            <Button IsCancel="True" MinWidth="100" Margin="5, 0, 0, 0" FontSize="14">_Nein</Button>
        </UniformGrid>
    </StackPanel>
</Window>
